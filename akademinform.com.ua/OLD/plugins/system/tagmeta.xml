<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
  <name>System - Tag Meta</name>
  <author>Luigi Balzano</author>
  <creationDate>January 2009</creationDate>
  <copyright>Copyright (C) 2009 Sistemistica.it</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>info@sistemistica.it</authorEmail>
  <authorUrl>www.sistemistica.it</authorUrl>
  <version>1.2</version>
  <description>Set the tag 'title' and the meta tags 'description', 'keywords' and 'robots' on pages (useful for SEO)</description>
  <files>
    <filename plugin="tagmeta">tagmeta.php</filename>
  </files>

    <languages>
        <language tag="en-GB">language/en-GB.plg_system_tagmeta.ini</language>
        <language tag="it-IT">language/it-IT.plg_system_tagmeta.ini</language>
    </languages>

  <params>
  	<param name="customauthor" type="text" default="" label="CUSTOM META AUTHOR LABEL" description="CUSTOM META AUTHOR DESC" />
    <param name="addauthor" type="radio" default="0" label="ADD META AUTHOR LABEL" description="ADD META AUTHOR DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
      <option value="2">Preserve</option>
    </param>
  	<param name="customgenerator" type="text" default="" label="CUSTOM META GENERATOR LABEL" description="CUSTOM META GENERATOR DESC" />
    <param name="replacegenerator" type="radio" default="0" label="REPLACE META GENERATOR LABEL" description="REPLACE META GENERATOR DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
      <option value="2">Clean</option>
    </param>
    <param name="addsitename" type="radio" default="0" label="ADD SITE NAME TO PAGE TITLE LABEL" description="ADD SITE NAME TO PAGE TITLE DESC">
      <option value="0">No</option>
      <option value="1">Before</option>
      <option value="2">After</option>
    </param>
    <param name="separator" type="text" default="\b-\b" label="SEPARATOR LABEL" description="SEPARATOR DESC" />
    <param name="cleandefaultpage" type="radio" default="0" label="CLEAN DEFAULT PAGE LABEL" description="CLEAN DEFAULT PAGE DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="metatitle" type="radio" default="1" label="ALIGN META TITLE LABEL" description="ALIGN META TITLE DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
      <option value="2">Force</option>
    </param>
    <param name="redirect" type="radio" default="0" label="REDIRECT LABEL" description="REDIRECT DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
  </params>
</install>
